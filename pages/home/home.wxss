/* pages/home/home.wxss */
.swiper-tab {
  height: 10vh;
  width: 100vw;
  margin: auto;
  text-align: center;
  line-height: 10vh;
  border-bottom: 1px #eee solid;
  position: fixed;
  z-index: 999;
  background: #ffffff;
  overflow: scroll;
  bottom: 0;
}  
.swiper-tab-list {
  font-size: 30rpx;
  font-weight: bold;
  display: inline-block;  
  width: 45vw;  
  color: #aaa;
}
.on {
  color: #000;
}  
.swiper-box {
  z-index: 0;
  display: block;
  height: 100%;
  width: 100%;
}
.swiper-box .item-box {
  width: 90vw;
  margin: 40rpx auto;
  background: #fff;
  border-radius: 4px;
}
.container .image-box image,
.container .image-box camera {
  width: 100%;
  height: 100vw;
}
.container .camera-btn {
  margin-top: 10vh;
}
.container .camera-btn button {
  width:80px;
  border-radius:100px;
  height:80px;
  background:#Ffffff;
  border:10px solid #cccccc;
}