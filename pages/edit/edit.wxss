/* pages/edit/edit.wxss */
.swiper-tab {
  height: 10vh;
  width: 100vw;
  margin: auto;
  text-align: center;
  line-height: 10vh;
  border-bottom: 1px #eee solid;
  position: fixed;
  z-index: 999;
  background: #ffffff;
  overflow: scroll;
  bottom: 0;
}  
.swiper-tab .button-hover {
  background: transparent;
}
.swiper-tab button {
  overflow: initial;
  background: transparent;
}
.swiper-tab-list {
  font-size: 30rpx;
  font-weight: bold;
  display: inline-block;  
  width: 45vw;  
  color: #000;
}
.container .image-box image {
  width: 100%;
  height: 100vw;
}
.container .image-box canvas {
  width: 100%;
  height: 100vw;
  position: absolute;
}

.container .out {
  padding: 10px 0;
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
  margin-top: 8vh;
}
.container .filter-list {
  width: 100%;
}
.container .filter-list .filter-box {
  width: 120px;
  display: inline-block;
  margin-right: 10px;
}
.container .filter-list .filter-box:first-child {
  margin-left: 10px;
}
.container .filter-list .filter-box .img,
.container .filter-list .filter-box .img image {
  width: 120px;
  height: 120px;
}
.container .filter-list .filter-box .title {
  text-align: center;
  color: grey;
  margin-top: 10px;
  font-size: 30rpx;
}