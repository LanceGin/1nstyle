/* pages/edit/edit.wxss */
.container .image-box image {
  width: 100%;
  height: 100vw;
}

.container .out {
  padding: 10px 0;
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
  margin-top: 8vh;
}
.container .filter-list {
  width: 100%;
}
.container .filter-list .filter-box {
  width: 120px;
  display: inline-block;
  margin-right: 10px;
}
.container .filter-list .filter-box:first-child {
  margin-left: 10px;
}
.container .filter-list .filter-box .img,
.container .filter-list .filter-box .img image {
  width: 120px;
  height: 120px;
}
.container .filter-list .filter-box .title {
  text-align: center;
  color: grey;
  margin-top: 10px;
  font-size: 30rpx;
}